rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ... your other rules (like the general 'allow read, write: if true;')
    
    // --- REQUIRED RULE FOR COLLECTION GROUP QUERIES ---
    // This rule allows the collectionGroup('disruptions') query to run.
    match /{path=**}/disruptions/{disruptionId} {
      // The condition to allow reading, matching your 'allow read: if request.auth != null' intent.
      // Since your general rule is 'allow read, write: if true', let's use that for testing.
      allow read: if true; 
    }
  }
}