
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all access to prevent unintended open collections
    match /{document=**} {
      allow read, write: if false;
    }

    // This rule allows any authenticated user to LIST the contents of any collection
    // within the public data sandbox. This is what fixes the query error.
    match /artifacts/{appId}/public/data/{collection} {
      allow list: if request.auth != null;
    }
    
    // This rule allows a collection group query on any collection named 'assets' or 'disruptions'
    match /{path=**}/assets/{assetId} {
      allow read: if request.auth != null;
    }
     match /{path=**}/disruptions/{disruptionId} {
      allow read: if request.auth != null;
    }


    // This rule allows authenticated users to GET, CREATE, UPDATE, and DELETE
    // individual documents within the public data sandbox collections.
    match /artifacts/{appId}/public/data/{collection}/{docId=**} {
      allow read, write: if request.auth != null;
    }
  }
}
